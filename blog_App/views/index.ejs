<%- include("partials/header.ejs") %>


    <div class="ui main text container">
        <div class="ui huge header">
            Restful blog App
        </div>

        <div class="ui top attached segment">
            <div class="ui divided items">

                <% blogs.forEach(function(blogs) {  %>

                    <div class="item">
                        <div class="image">
                            <img src="<%= blogs.image %> ">
                        </div>
                        <div class="content">

                            <a class="header" href="/blogs/<%= blogs._id %>">
                                <%= blogs.title %>
                                    <div class="meta">
                                        <span><%=blogs.created.toDateString() %> </span>

                                    </div>
                                    <div class="description">
                                        <p>
                                            <%- blogs.body.substring(0,100)%> ....
                                        </p>
                                    </div>

                                    <div class="extra">
                                        <a class="ui floated basic violet button" href="/blogs/<%= blogs._id %> ">read more
                                <i class="right chevron icon"></i></a>
                                    </div>



                        </div>

                    </div>
                    <% }) %>




                        <!-- this is to print first 100 words of the letter  -->

            </div>
        </div>

    </div>


    <%- include("partials/footer.ejs") %>