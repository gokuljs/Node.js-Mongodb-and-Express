<%- include("../partials/header") %>

    <header>
        <div class="container-fluid">

            <div class="container-fluid">
                <div class="jumbotron">
                    <h1 class="display-4">Welcome to YelpCamp</h1>
                    <p class="lead">view all handpicked campgrounds all over the world</p>
                    <hr class="my-4">

                    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add new campground</a>
                </div>


            </div>
        </div>
    </header>



    <div class="container-fluid">
        <div class="row">
            <% campgrounds.forEach(function(campgrounds) { %>
                <div class="col-lg-3 col-md-6 col-sm-12" id="column">


                    <div class="card" style="width: 18rem;">
                        <img src="<%= campgrounds.image %> " class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campgrounds.name %>
                            </h5>
                            <p class="card-text">
                                <%= campgrounds.desc %>
                            </p>
                            <a href="/campgrounds/<%= campgrounds._id %> " class="btn btn-primary">More info</a>
                        </div>
                    </div>

                </div>
                <% }) %>
        </div>
    </div>



    <%- include("../partials/footer") %>