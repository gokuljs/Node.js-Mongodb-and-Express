<%- include("../partials/header")%>
    <div class="container" style="margin-top: 30px;">

        <h1 style="text-align: center;">Add new Comment to
            <%= campground.name %>
        </h1>
        <div style="width:45%; margin: 0 auto;">
            <form method="POST" action="/campgrounds/<%=campground._id%>/comments">

                <div class="form-group">
                    <input type="text " class="form-control " placeholder="author" name="comment[author]">
                </div>
                <div class="form-group">
                    <input class="form-control " type="text " placeholder="text" name="comment[text]">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block ">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>


    </div>

